import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

public class TopLevelDemo {
	private static void createAndShowGUI() {
		JFrame frame = new JFrame ("504 Project");
		frame.setDefaultCloseOperation (JFrame.EXIT_ON_CLOSE);
		JMenuBar greenMenuBar = new JMenuBar ();
		greenMenuBar.setOpaque (true);
		greenMenuBar.setBackground (new Color (160, 160, 160));
		greenMenuBar.setPreferredSize (new Dimension (200, 20));
		JPanel pane = new JPanel ();
		pane.setOpaque (true);
		pane.setBackground (new Color (255, 255, 255));
		pane.setPreferredSize (new Dimension (200, 180));
		JButton click = new JButton("Click");
		click.setPreferredSize (new Dimension (80, 40));
		pane.add (click, BorderLayout.PAGE_END);
		JTextField text = new JTextField ("abcd");
		text.setPreferredSize (new Dimension (200, 50));
		pane.add (text, BorderLayout.PAGE_START);
		frame.setJMenuBar (greenMenuBar);
		pane.add(click);
		pane.add(text);
		frame.getContentPane ().add(pane, BorderLayout.CENTER);
		frame.pack();
		frame.setVisible(true);
	}
	public static void main (String [] args) {
		javax.swing.SwingUtilities.invokeLater (new Runnable () {
			public void run () {
				createAndShowGUI();
			}
		});
	}
}
